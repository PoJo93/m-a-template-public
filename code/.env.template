# M&A CIM Template - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# LlamaParse API Configuration
# Get your API key from: https://cloud.llamaindex.ai/
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# Optional: OpenAI API Key for enhanced processing
# OPENAI_API_KEY=your_openai_api_key_here

# Processing Configuration
# Maximum file size for processing (in MB)
MAX_FILE_SIZE_MB=50

# Processing timeout (in seconds)
PROCESSING_TIMEOUT=300

# Batch processing settings
BATCH_SIZE=5
CONCURRENT_PROCESSING=true

# Output Configuration
OUTPUT_FORMAT=markdown
INCLUDE_METADATA=true

# Debug settings
DEBUG=false
VERBOSE_LOGGING=false
